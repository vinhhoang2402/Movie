<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="isLoading"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/Black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.detail.DetailFragment">
        <ProgressBar
            android:visibility="@{isLoading ? View.VISIBLE : View.GONE, default=gone}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/poster"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="400dp"/>
        <ImageView
            android:id="@+id/back"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/poster"
            app:layout_constraintStart_toStartOf="@id/poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/favorite"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_baseline_favorite_border_24"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/poster"
            app:layout_constraintEnd_toEndOf="@id/poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_baseline_system_update_alt_24"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/poster"
            app:layout_constraintEnd_toStartOf="@id/favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/White"
            android:textSize="20sp"
            android:text="Dunkirk"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="@id/poster"
            app:layout_constraintStart_toStartOf="@id/poster"
            android:layout_marginStart="20dp"
            android:id="@+id/name_movie"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/White"
            android:textSize="14sp"
            android:text="(2017)"
            app:layout_constraintTop_toTopOf="@id/name_movie"
            app:layout_constraintStart_toEndOf="@id/name_movie"
            app:layout_constraintBottom_toBottomOf="@id/name_movie"
            android:layout_marginStart="20dp"
            android:id="@+id/year"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:padding="6dp"
            android:background="@drawable/border_text"
            android:textColor="@color/White"
            android:textSize="12sp"
            android:text="ACTION"
            app:layout_constraintTop_toBottomOf="@id/name_movie"
           app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:id="@+id/action"
            android:layout_width="60dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:padding="6dp"
            android:background="@drawable/border_text"
            android:textColor="@color/White"
            android:textSize="12sp"
            android:text="DRAMA"
            app:layout_constraintTop_toBottomOf="@id/name_movie"
            app:layout_constraintStart_toEndOf="@id/action"
            android:layout_marginStart="10dp"
            android:id="@+id/drama"
            android:layout_width="60dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:padding="6dp"
            android:background="@drawable/border_text"
            android:textColor="@color/White"
            android:textSize="12sp"
            android:text="HISTORY"
            app:layout_constraintTop_toBottomOf="@id/name_movie"
            app:layout_constraintStart_toEndOf="@id/drama"
            android:layout_marginStart="10dp"
            android:id="@+id/history"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <FrameLayout
            app:layout_constraintTop_toTopOf="@id/poster"
            app:layout_constraintStart_toStartOf="@id/poster"
            app:layout_constraintEnd_toEndOf="@id/poster"
            app:layout_constraintBottom_toBottomOf="@id/poster"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:src="@drawable/ic_baseline_play_arrow_24"
                android:background="@drawable/border_active"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        </FrameLayout>

        <TextView
            android:id="@+id/dess"
            android:layout_width="391dp"
            android:layout_height="32dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/dess"
            android:textColor="@color/White"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/poster" />

        <TextView
            android:id="@+id/des"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:scrollbars="vertical"
            android:textColor="@color/White"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dess"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>